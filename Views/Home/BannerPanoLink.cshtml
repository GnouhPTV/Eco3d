@using Data.Models
@using Lib
@model IEnumerable<SlideModel>
@{
    Layout = null;
}
<div class="bg_container_w pt-50 pb-50">
    <div class="container wow fadeInUp">
        <!-- Start: Slideshow -->
        <div id="pano-main" class="owl-carousel">
            @foreach (var pano in Model)
            {
                <div class="slide-item slide-img pano-link" onclick="location.href='@pano.UrlLink';">
                    <a href="javascript:void(0)" target="_blank">
                        @* <span style="display:none;" class="slide-name"></span>
                    <span style="display:none;" class="slide-content"></span> *@
                        <img class="lazyload" src="@pano.ImageUrl" alt="@pano.DataJson.GetDJ("Title")">
                    </a>
                </div>
            }
        </div>
        <!-- End: Slideshow -->
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#pano-main").owlCarousel({
            items: 2,
            loop: true,
            margin: 30,
            nav: false,
            navText: ["<i class='fas fa-chevron-left'></i>", "<i class='fas fa-chevron-right'></i>"],
            dots: false,
            responsive: {
                0: { items: 1 },
                568: { items: 1 },
                768: { items: 2 }
            },
            autoplay: true,
            autoplayHoverPause: true
        });
    });
</script>
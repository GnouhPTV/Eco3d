
@{
    Layout = null;
}
<div class="bg_container_g pt-15 pb-50">
    <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
        <div class="w-100 home-category home-blog" style="" id="home-blog">
            <div class="title-group">
                <h5 class="title">
                    BẢO HỘ NGÀNH - LĨNH VỰC
                </h5>
            </div>
            <div class="content">
                <div class="bg"></div>
                <ul id="homeblog_ul" data-load="1">
                </ul>
                <input type="hidden" id="loadIndustry" value="0" />
            </div>
            <div class="clear"></div>
            <input type="hidden" id="txtTopBlog" value="8">
        </div>
    </div>
</div>
<script type="text/javascript">
    var idHomeIndustry = $('#homeblog_ul');
    $(window).scroll(function () {
        var hT = idHomeIndustry.offset().top,
            hH = idHomeIndustry.outerHeight(),
            wH = $(window).height(),
            wS = $(this).scrollTop();
        if (wS > (hT + hH - wH) && (hT > wS) && (wS + wH > hT + hH)) {
            if ($("#loadIndustry").val() == "0") {
                LoadHomeBlog();
            }
            $("#loadIndustry").val("1");
        }
    });

    function LoadHomeBlog() {
        // var top = parseInt($('#txtTopBlog').val());
        // $('#txtTopBlog').val(top);
        var container = "#homeblog_ul";
        // Load Ajax
        $.ajax({
            type: 'Get',
            data: {},
            url: '/Home/LoadHomeIndustry',
            success: function (msg) {
                $(container).append(msg);
            },
            beforeSend: function () {
                $(container).attr("data-load", 1);
            },
            complete: function () {
                $("#home-blog").show();
            }
        });
    }
</script>